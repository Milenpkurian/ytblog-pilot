{
  "AppSettings": {
    "CacheDirectory": ".cache",
    "CacheTtlDays": 7,
    "MaxTranscriptLength": 10000,
    "ChunkSize": 1500,
    "DefaultOutputDirectory": "./output",
    "DefaultTemplate": "default",
    "MaxRetries": 3,
    "RetryDelaySeconds": 2,
    "CopilotTimeout": 300
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}
